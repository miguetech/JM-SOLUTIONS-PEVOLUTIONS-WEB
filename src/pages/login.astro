---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer';
import { AuthForm } from '../components/AuthForms';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<Layout title="Login - PEvolutions">
	<Navbar client:load lang={lang as 'en' | 'es' | 'pt'} />
	
	<main class="min-h-[80vh] flex items-center justify-center px-6 py-20 bg-brand-bg relative overflow-hidden">
		{/* Decorative background blur */}
		<div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-brand-accent/10 rounded-full blur-[120px] pointer-events-none"></div>
		
		<AuthForm client:load type="login" lang={lang as 'en' | 'es' | 'pt'} />
	</main>

	<Footer client:visible lang={lang as 'en' | 'es' | 'pt'} />
</Layout>
