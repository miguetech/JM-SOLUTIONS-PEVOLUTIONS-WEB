---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import OnlinePlayersList from '../components/OnlinePlayers';
import Footer from '../components/Footer';
import { ServerInfo, TopPlayers } from '../components/Sidebar';
---

<Layout title="Online Players - PEvolutions">
	<Navbar client:load />
	
	<main class="max-w-7xl mx-auto px-6 py-12">
		<div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
			{/* Right Column: Sidebar (First on mobile) */}
			<aside class="lg:col-span-4 lg:order-2 flex flex-col gap-y-10">
				<div><ServerInfo client:load /></div>
				<div><TopPlayers client:visible /></div>
			</aside>

			{/* Left Column: Online Players List */}
			<div class="lg:col-span-8 lg:order-1 space-y-8">
				<OnlinePlayersList client:load />
			</div>
		</div>
	</main>

	<Footer client:visible />
</Layout>
